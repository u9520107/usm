{
  "name": "usm",
  "version": "0.0.1",
  "description": "Universal state module",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "test": "cross-env NODE_ENV=development jest --config ./scripts/jest/config.js",
    "watch": "yarn test --watch",
    "start": "lerna run start --stream",
    "clean": "lerna run clean --stream",
    "check-type": "lerna run check-type --stream",
    "build": "lerna run build --stream",
    "quick-build": "lerna run quick-build --stream",
    "publish": "lerna publish",
    "commit": "yarn git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unadlib/usm.git"
  },
  "keywords": [
    "Universal",
    "state",
    "module"
  ],
  "author": "unadlib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unadlib/usm/issues"
  },
  "homepage": "https://github.com/unadlib/usm#readme",
  "devDependencies": {
    "commitizen": "^3.1.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^24.5.0",
    "lerna": "^3.14.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
